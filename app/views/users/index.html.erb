
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

<h2>User info</h2>

<table class="table">
 <tbody>
  <%= image_tag @user.get_profile_image(100,100) %>
  <tr>
   <th>name</th>
   <th><%= @user.name %></th>
  </tr>

  <tr>
   <th>introdction</th>
   <th><%= @user.introduction %></th>
  </tr>
 </tbody>
</table>

<%= link_to  edit_user_path(@user.id) do %>
<i class="fas fa-user-cog"></i>
<% end %>

 </div>
 
 <div class="col-md-8 offset-md-1">
  
<h2>New book</h2>

<%=form_with model: Book.new, url:books_path, method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_area :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  <% end %>

  <table class="table">
 <thead>
 <tr>
  <th>image</th>
  <th>name</th>
 </tr>
 </thead>
<tbody>
  <% @users.each do |user| %>
 <tr>
  <td><%= image_tag user.get_profile_image(100,100) %></td>
  <td><%= user.name %></td>
  <td><%= link_to "Show", user_path(user.id) %></td>
 </tr>

 <% end %>
 </tbody>
</table>

 </>
 </div>
</div>

